.form-signin
	= form_tag "/login" do
		%h2.form-signin-heading Авторизация
		%h5.form-signin-heading Введите адрес электронной почты и пароль
		= text_field_tag :email, params[:email], :placeholder => "email", class: "span12"
		= password_field_tag :password, params[:password], :placeholder => "password", class: "span12"
		.center
			= submit_tag "Войти", class: "btn-glass btn-glass-blue"