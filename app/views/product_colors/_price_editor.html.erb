<h5> Новая цена | Белые </h5>
  <table class="table table-hover table-condensed table-bordered">
    <tr>
      <th></th>
      <th> <10 </th>
      <th> 10-50 </th>
      <th> 50-100 </th>
      <th> 100-250 </th>
      <th> 250-500 </th>
      <th> 500-1000 </th>
      <th> >1000 </th>
    </tr>
    <tr class="success">
      <td>Цена</td>
<%= form_for @white_prices do |f| %>
          <td><%= f.text_field :price_1, class: "input-mini" %></td>
          <td><%= f.text_field :price_2, class: "input-mini" %></td>
          <td><%= f.text_field :price_3, class: "input-mini" %></td>
