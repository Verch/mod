          <td><%= f.text_field :price_5, class: "input-mini" %></td>
          <td><%= f.text_field :price_6, class: "input-mini" %></td>
          <td><%= f.text_field :price_7, class: "input-mini" %></td>
    </tr>
    <tr class="success">
      <td colspan=8 >
        <%= f.submit ' Сохранить ', class: "btn btn-success pull-right" %>
      </td>
    </tr>
<% end %> 
  </table>
