<%= @product.description_top.html_safe %>
<table class="product_table">
	<tr>
	<% @product_types.each do |product_type| %>
		<% if (product_type.id == 5) || (product_type.id == 9) %>
			</tr><tr>
		<% end %>
		<% if (product_type.id > 0 && product_type.id < 11) %>
			<td>
				<%= link_to image_tag(product_type.big_image_url,{width: "200px", height: "284px", class: "product_show_imgs"}), "/futbolki/#{product_type.id}" %>
				<br>
				<%= link_to product_type.name, "/futbolki/#{product_type.id}" %>
			</td>
		<% else %>
			<% if (product_type.id == 11 || product_type.id ==12) %>
				<td>
					<%= link_to image_tag(product_type.big_image_url,{width: "200px", height: "284px", class: "product_show_imgs"}), "/rubashki-polo/#{product_type.id}" %>
					<br>
					<%= link_to product_type.name, "/rubashki-polo/#{product_type.id}" %>
				</td>
			<% else %>
				<% if (product_type.id == 13 || product_type.id ==14) %>
					<td>
						<%= link_to image_tag(product_type.big_image_url,{width: "200px", height: "284px", class: "product_show_imgs"}), "/tolstovki/#{product_type.id}" %>
						<br>
						<%= link_to product_type.name, "/tolstovki/#{product_type.id}" %>
					</td>
				<% else %>
					<% if (product_type.id > 14 && product_type.id < 19) %>
						<td>
							<%= link_to image_tag(product_type.big_image_url,{width: "200px", height: "284px", class: "product_show_imgs"}), "/beysbolki/#{product_type.id}" %>
							<br>
							<%= link_to product_type.name, "/beysbolki/#{product_type.id}" %>
						</td>
					<% end %>
				<% end %>
			<% end %>
		<% end %>		 
	<% end %>
	</tr>
	<tr><td></td><td></td><td></td><td></td></tr>
</table>
<%= @product.description_bottom.html_safe %>