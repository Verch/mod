= form_for @user_group, html: {class: "form-horizontal"} do |f|
  .control-group
    = f.label "Имя группы:", class: "control-label"
    .controls 
      = f.text_field :name
  .control-group
    = f.label "Минимальный заказ:", class: "control-label"
    .controls
      = f.number_field :least_order
  .control-group
    = f.label "Admin", class: "control-label"
    .controls
      = f.check_box :admin_flag
  .control-group
    = f.label "Просмотр зарезервированной продукции:", class: "control-label"
    .controls
      = f.check_box :view_reserv_flag
  .control-group
    = f.label "Просмотр склада:", class: "control-label"
    .controls
      = f.check_box :view_sklad_flag
  .center
    = f.submit 'Сохранить', title: "Сохранить", class: "btn-glass btn-glass-green span2"
= link_to 'Назад', user_groups_path

