%b= @product_type.name
%p
  = @product_type.description.html_safe
.container-fluid
  .row-fluid
    .span4
      #click_image_color.span10.offset1
        = render "image_color"
    .span8
      - @product_colors.each do |product_color|
        .overlink_to_color  
          =link_to "<div style='background:#fff;color:#333;margin:auto;'>#{product_color.name}</div>".html_safe, product_type_path(get_product_color_id: product_color.id), remote: true, class: "link_to_color", style:"background-color: #{product_color.rgb};", id: product_color.big_image_url, title: product_color.name
      .clear
      %br
      .span10.offset1
        #to_order_menu
          %h5 Старая цена:
          %table.table.table-hover
            %tr
              %th
              %th <10
              %th 10-50
              %th 50-100
              %th 100-250
              %th 250-500
              %th 500-1000
              %th >1000
            %tr.error
              %td Белые
              %td=@white_prices.price_1
              %td=@white_prices.price_2
              %td=@white_prices.price_3
              %td=@white_prices.price_4
              %td=@white_prices.price_5
              %td=@white_prices.price_6
              %td=@white_prices.price_7
            %tr.error
              %td Цветные
              %td=@color_prices.price_1
              %td=@color_prices.price_2
              %td=@color_prices.price_3
              %td=@color_prices.price_4
              %td=@color_prices.price_5
              %td=@color_prices.price_6
              %td=@color_prices.price_7
          %h5 Новая цена:
          %table.table.table-hover
            %tr
              %th
              %th <10
              %th 10-50
              %th 50-100
              %th 100-250
              %th 250-500
              %th 500-1000
              %th >1000
            %tr.success
              %td Белые
              %td=@white_prices.price_1
              %td=@white_prices.price_2
              %td=@white_prices.price_3
              %td=@white_prices.price_4
              %td=@white_prices.price_5
              %td=@white_prices.price_6
              %td=@white_prices.price_7
            %tr.success
              %td Цветные
              %td=@color_prices.price_1
              %td=@color_prices.price_2
              %td=@color_prices.price_3
              %td=@color_prices.price_4
              %td=@color_prices.price_5
              %td=@color_prices.price_6
              %td=@color_prices.price_7
          %br
          %button#link_to_order_menu.btn.btn-success.span4.offset6
            Заказать
        #order_menu
          %hr
          %button#link_out_order_menu.btn.btn-danger.span4.offset6
            Закрыть
          .clear
          * Выберите цвет
          #list_to_cart
.clear