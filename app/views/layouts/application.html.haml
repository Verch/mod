!!!
%html
	%head
		%title Модерн Импорт
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		#wrap.gradient
			#temp_params_info
				=params
			=image_tag "Hat.png",{width: "100%"}
			%div{style: "background: url(#{asset_path '0border.png' }); background-size: cover;"}
				.main_nav
					= link_to "<i class='icon-home'></i> Главная".html_safe, root_path, style: " width: 12.5%;"
					- if ((params[:controller] == "products") || (params[:controller] == "product_types") || params[:get_product_type_id]) && (params[:action] == "index")
						= link_to "<i class='icon-tasks'></i> Склад".html_safe, "/products", style: " width: 12.5%;", class: "active"
					- else
						= link_to "<i class='icon-tasks'></i> Склад".html_safe, "/products", style: " width: 12.5%;"
					- if (params[:action] == "scheme")
						= link_to "<i class='icon-random'></i> Схема проезда".html_safe, "/scheme", style: " width: 12.5%;", class: "active"
					- else
						= link_to "<i class='icon-random'></i> Схема проезда".html_safe, "/scheme", style: " width: 12.5%;"
					- if (params[:action] == "about")
						= link_to "<i class='icon-comment'></i> О нас".html_safe, "/about", style: " width: 12.5%;", class: "active"
					- else
						= link_to "<i class='icon-comment'></i> О нас".html_safe, "/about", style: " width: 12.5%;"
					- if (params[:action] == "contact")
						= link_to "<i class='icon-envelope'></i> Контакты".html_safe, "/contact", style: " width: 12.5%;", class: "active"
					- else
						= link_to "<i class='icon-envelope'></i> Контакты".html_safe, "/contact", style: " width: 12.5%;"
					= link_to "".html_safe, "/contact", style: " width: 12.5%;"
					- if @current_user
						- if (params[:controller] == "users") 
							= link_to "<i class='icon-user'></i> #{@current_user.name}".html_safe, @current_user, style: " width: 12.5%;", class: "active"
						- else
							= link_to "<i class='icon-user'></i> #{@current_user.name}".html_safe, @current_user, style: " width: 12.5%;"
						- if (params[:controller] == "sessions") 
							= link_to "<i class='icon-share-alt'></i> Выйти".html_safe, logout_path, method: :delete, style: " width: 12.5%;", class: "active"
						- else
							= link_to "<i class='icon-share-alt'></i> Выйти".html_safe, logout_path, method: :delete, style: " width: 12.5%;"
					- else
						- if (params[:controller] == "users")
							= link_to "Регистрация", "/register", style: " width: 12.5%;", class: "active"
						- else
							= link_to "Регистрация", "/register", style: " width: 12.5%;"
						- if (params[:controller] == "sessions")
							= link_to "Вход", login_path, style: " width: 12.5%;", class: "active"
						- else
							= link_to "Вход", login_path, style: " width: 12.5%;"
					.clear
			.container-fluid.up15
				.row-fluid
					.span3
						#well
							%ul.nav.nav-list
								.nav-header
									Наша продукция
									= link_to "<i class='icon-search'></i>".html_safe, product_sizes_path
								//%li{class:"active"}= link_to "Футболки", "/products/1"
								- if (((params[:controller] == "products")&&(params[:id].to_i == 1)) || ((params[:controller] == "product_types")&&(params[:id].to_i > 0)&&(params[:id].to_i < 11))) && (params[:action] == "show")
									%li{class:"activeMy"}
										= link_to "<i class='icon-chevron-down'></i>Футболки".html_safe, "/products/1", class: "side_link"
										%ul.nav.nav-list
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 1)
												%li{class:"activeMy"}= link_to "Мужские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/1"
											-else
												%li= link_to "Мужские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/1"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 2)
												%li{class:"activeMy"}= link_to "Женские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/2"
											-else
												%li= link_to "Женские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/2"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 3)
												%li{class:"activeMy"}= link_to "Детские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/3"
											-else
												%li= link_to "Детские кор. рук. 155 гр хлопок 100%".html_safe, "/product_types/3"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 4)
												%li{class:"activeMy"}= link_to "Мужские дл. рук. 155 гр хлопок 100%".html_safe, "/product_types/4"
											-else
												%li= link_to "Мужские дл. рук. 155 гр хлопок 100%".html_safe, "/product_types/4"
											%li{class:"divider"}
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 5)
												%li{class:"activeMy"}= link_to "Мужские кор. рук. 180 гр хлопок / лайкра".html_safe, "/product_types/5"
											-else
												%li= link_to "Мужские кор. рук. 180 гр хлопок / лайкра".html_safe, "/product_types/5"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 6)
												%li{class:"activeMy"}= link_to "Женские кор. рук. 180 гр хлопок  / лайкра".html_safe, "/product_types/6"
											-else
												%li= link_to "Женские кор. рук. 180 гр хлопок  / лайкра".html_safe, "/product_types/6"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 7)
												%li{class:"activeMy"}= link_to "Мужские дл. рук. 180 гр хлопок / лайкра".html_safe, "/product_types/7"
											-else
												%li= link_to "Мужские дл. рук. 180 гр хлопок / лайкра".html_safe, "/product_types/7"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 8)
												%li{class:"activeMy"}= link_to "Женские дл. рук. 180 гр хлопок / лайкра".html_safe, "/product_types/8"
											-else
