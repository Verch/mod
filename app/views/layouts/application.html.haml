											-else
												%li= link_to "Люкс Экстра".html_safe, "/beysbolki/18"
								- else
									%li= link_to "<i class='icon-chevron-right'></i>Бейсболки".html_safe, "/beysbolki", class: "side_link"
								- if @current_user
									%li{class:"divider"}
									%li= link_to "<i class='icon-user'></i>Личный кабинет".html_safe, @current_user, class: "side_link"
									%ul.nav.nav-list
										- if @current_group and @current_group.admin_flag
