								- else
									%li= link_to "<i class='icon-chevron-right'></i>Футболки".html_safe, "/products/1", class: "side_link"
								- if (((params[:controller] == "products")&&(params[:id].to_i == 2)) || ((params[:controller] == "product_types")&&(params[:id].to_i > 10)&&(params[:id].to_i < 13))) && (params[:action] == "show")
									%li{class:"activeMy"}
										= link_to "<i class='icon-chevron-down'></i>Рубашки поло".html_safe, "/products/2", class: "side_link"
										%ul.nav.nav-list
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 11)
