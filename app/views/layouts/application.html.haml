								- else
									%li= link_to "<i class='icon-chevron-right'></i>Толстовки".html_safe, "/products/3", class: "side_link"
								- if (((params[:controller] == "products")&&(params[:id].to_i == 4)) || ((params[:controller] == "product_types")&&(params[:id].to_i > 14)&&(params[:id].to_i < 19))) && (params[:action] == "show")
									%li{class:"activeMy"}
										= link_to "<i class='icon-chevron-down'></i>Бейсболки".html_safe, "/products/4", class: "side_link"
										%ul.nav.nav-list
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 15)
												%li{class:"activeMy"}= link_to "Классика".html_safe, "/product_types/15"
											-else
												%li= link_to "Классика".html_safe, "/product_types/15"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 16)
												%li{class:"activeMy"}= link_to "Комфорт".html_safe, "/product_types/16"
											-else
												%li= link_to "Комфорт".html_safe, "/product_types/16"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 17)
												%li{class:"activeMy"}= link_to "Люкс".html_safe, "/product_types/17"
											-else
												%li= link_to "Люкс".html_safe, "/product_types/17"
											- if (params[:controller] == "product_types")&&(params[:id].to_i == 18)
												%li{class:"activeMy"}= link_to "Люкс Экстра".html_safe, "/product_types/18"
											-else
												%li= link_to "Люкс Экстра".html_safe, "/product_types/18"
								- else
									%li= link_to "<i class='icon-chevron-right'></i>Бейсболки".html_safe, "/products/4", class: "side_link"
								- if @current_user
									%li{class:"divider"}
									%li= link_to "<i class='icon-user'></i>Личный кабинет".html_safe, @current_user, class: "side_link"
									%ul.nav.nav-list
										- if @current_group and @current_group.admin_flag
											%li= link_to 'Заказы/Резервы', orders_path
											%li= link_to 'Склад', products_path
											%li= link_to 'Архив', orders_path(temp_order_id: "5")
											%li= link_to 'Пользователи', users_path
											%li= link_to 'Группы', user_groups_path
											%li= link_to 'Редактор новостей', edit_tool_path(1)
											%li= link_to 'Управление скидками', discounts_path 
										- else
											%li= link_to 'Счета', specs_path
											%li= link_to 'Заказы/Резервы', orders_path 
							.clear	
						%br
						- if @cart
							#cart
								= render @cart
					.span9
						-if notice
							.alert.alert-success=notice.html_safe
						#well
							= yield
			#push
		%footer#footer
			%p#p_footer &copy; Модерн Импорт 2012
			%p#p_footer
				Powered by
